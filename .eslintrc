{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": ["airbnb/base"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "semi" : [2, "always"],
        "eol-last" : "off",
        "no-tabs" : "off",
        "import/no-named-as-default": 0,
        "no-useless-constructor": "off",
        "no-empty-function": "off",
        "no-unused-expressions": "off",
        "import/no-named-as-default-member": "off"
    }
}